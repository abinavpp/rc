#! /bin/bash

pri=`xrandr -q | grep 'connected primary' | awk '{print $1}'`
sec=`xrandr -q | grep -P 'connected (?!primary)' | awk '{print $1}'`
[[ -z $pri || -z $sec ]] && exit 1

xrandr --output $pri --off
xrandr --output $pri --auto
xrandr --output $sec --auto
xrandr --output $sec --set "Broadcast RGB" "Full"
