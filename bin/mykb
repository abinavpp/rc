#! /bin/bash

function raw_tty() {
  ! dumpkeys &> /dev/null && return 1;
  local keymap=`dumpkeys | head -n 1`
  cat <<E > ~/.cache/mytty.map
$keymap
keycode 58 = Escape
keycode 1 = Caps_Lock
keycode 56 = SCtrl
keycode 100 = SAlt
keycode 125 = SShift
E
  loadkeys ~/.cache/mytty.map
}

function xmap() {
  local src=$1 dst=$2
  local map=`cat /usr/share/X11/xkb/keycodes/evdev | grep "$src"`
  [[ -z $map ]] && return
  local kc=`echo $map | awk '{print $3}' | sed 's/.$//'`
  xmodmap -e "keycode $kc = $dst"
}

function x() {
  xkbset sticky -twokey
  xkbset exp 1 =sticky
  setxkbmap -option caps:ctrl_modifier
  # FIXME: xmodmap + xkb config is buggy; Replace xmodmap ones with xkb.
  xmap '<TAB>' 'Shift_L'
}

run=$1; shift

if [[ $run == 'tty' ]]; then
  raw_tty
elif [[ $run == 'x' ]]; then
  x
fi
