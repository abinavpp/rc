[alias]
  cfl = config --local -l
  cfg = config --global -l
  lg = log --oneline
  lgg = log --graph --oneline
  sh = show --no-patch --oneline
  shs = show --stat --oneline
  st = status
  cm = commit
  cma = commit --amend
  cf = "!git add --all; git clang-format; git add --all; git reset"
  ch = checkout
  br = branch
  df = diff
  rb = rebase
  rbi = rebase -i
  rbc = rebase --continue
  dfc = diff --cached
  them = ls-files --others --directory

[core]
  editor = vim -i NONE

[init]
  defaultBranch = main

[pull]
  rebase = true

[include]
  path = ~/.post-gitconfig
