set $black #000000
set $grey #303030
set $white #ffffff
set $red #d70000

font pango:: 11

bar {
  status_command i3status
  tray_output primary
  separator_symbol "|"
  colors {
    background $black
    statusline $white

    # <property> <border> <background> <foreground>
    focused_workspace $black $black $white
    active_workspace $black $black $white
    inactive_workspace $black $black $grey
    urgent_workspace $red $black $white
  }
}

# <property> <border> <background> <foreground> <indicator>
client.focused $black $black $white $black
client.unfocused $black $black $grey $black
client.focused_inactive $black $black $grey $black
client.urgent $red $black $white $black

# Use Mouse+Mod4 to drag floating windows to their wanted position
floating_modifier Mod4

workspace_layout tabbed

bindsym Mod1+bracketleft exec myxterm min
bindsym Mod1+grave exec dmenu_run -fn "-xos4--medium" -nb "#000000" -sb "#000000" -sf "#ffffff"
bindsym Mod1+backslash kill

bindsym XF86AudioLowerVolume exec amixer set Master 5%-
bindsym XF86AudioRaiseVolume exec amixer set Master 5%+
bindsym Mod1+o exec amixer set Master 5%-
bindsym Mod1+p exec amixer set Master 5%+

bindsym Mod1+s focus left
bindsym Mod1+f focus right
bindsym Mod1+d focus down
bindsym Mod1+e focus up
bindsym Mod4+Left focus left
bindsym Mod4+Right focus right
bindsym Mod4+Down focus down
bindsym Mod4+Up focus up

bindsym Mod1+Shift+s move left
bindsym Mod1+Shift+f move right
bindsym Mod1+Shift+d move down
bindsym Mod1+Shift+e move up
bindsym Mod4+Shift+Left move left
bindsym Mod4+Shift+Right move right
bindsym Mod4+Shift+Down move down
bindsym Mod4+Shift+Up move up

bindsym Mod1+w layout toggle tabbed split
bindsym Mod4+h split h
bindsym Mod4+v split v
bindsym Mod4+f fullscreen toggle
bindsym Mod4+s layout stacking
bindsym Mod4+e layout toggle split
bindsym Mod4+Shift+space floating toggle
bindsym Mod4+space focus mode_toggle
bindsym Mod4+a focus parent

bindsym Mod1+1 workspace 1
bindsym Mod1+2 workspace 2
bindsym Mod1+3 workspace 3
bindsym Mod1+4 workspace 4
bindsym Mod1+5 workspace 5
bindsym Mod1+6 workspace 6
bindsym Mod1+7 workspace 7
bindsym Mod1+8 workspace 8
bindsym Mod1+9 workspace 9
bindsym Mod1+0 workspace 10

bindsym Mod1+Shift+1 move container to workspace 1
bindsym Mod1+Shift+2 move container to workspace 2
bindsym Mod1+Shift+3 move container to workspace 3
bindsym Mod1+Shift+4 move container to workspace 4
bindsym Mod1+Shift+5 move container to workspace 5
bindsym Mod1+Shift+6 move container to workspace 6
bindsym Mod1+Shift+7 move container to workspace 7
bindsym Mod1+Shift+8 move container to workspace 8
bindsym Mod1+Shift+9 move container to workspace 9
bindsym Mod1+Shift+0 move container to workspace 10

bindsym Mod4+Shift+c reload
bindsym Mod4+Shift+r restart
bindsym Mod4+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

mode "resize" {
  bindsym j resize shrink width 10 px or 10 ppt
  bindsym k resize grow height 10 px or 10 ppt
  bindsym l resize shrink height 10 px or 10 ppt
  bindsym semicolon resize grow width 10 px or 10 ppt
  bindsym Left resize shrink width 10 px or 10 ppt
  bindsym Down resize grow height 10 px or 10 ppt
  bindsym Up resize shrink height 10 px or 10 ppt
  bindsym Right resize grow width 10 px or 10 ppt
  bindsym Return mode "default"
  bindsym Escape mode "default"
}
bindsym Mod4+r mode "resize"
