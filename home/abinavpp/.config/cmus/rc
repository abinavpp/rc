set output_plugin=pulse
set softvol=true
set mouse=true
set display_artist_sort_name=false
set show_current_bitrate=true

bind -f common j win-next
bind -f common l win-next
bind -f common k win-down
bind -f common mouse_scroll_down win-scroll-down
bind -f common i win-up
bind -f browser i win-up
bind -f common mouse_scroll_up win-scroll-up

bind -f common enter seek -5
bind -f common ^L seek +5
bind -f common ^K seek -1m
bind -f common tab seek +1m

bind -f common 9 vol -10%
bind -f common 0 vol +10%

bind -f common ; win-activate
bind -f browser l win-activate

set color_win_bg=default
set color_win_fg=default
set color_win_dir=default
set color_win_cur=89

set color_win_title_bg=default
set color_win_title_fg=22
set color_titleline_bg=default
set color_titleline_fg=89

set color_win_cur_sel_bg=42
set color_win_cur_sel_fg=89
set color_win_sel_bg=42
set color_win_sel_fg=black
set color_win_inactive_cur_sel_bg=default
set color_win_inactive_cur_sel_fg=89
set color_win_inactive_sel_bg=default
set color_win_inactive_sel_fg=29

set color_cmdline_bg=default
set color_cmdline_fg=default

set color_statusline_bg=33
set color_statusline_fg=black

set color_error=124
set color_info=208
set color_separator=240
