set mixer.alsa.channel=Master
set softvol=true
set mouse=true
set display_artist_sort_name=false
set show_current_bitrate=true

bind -f common H seek -1m
bind -f common L seek +1m
bind -f common left win-next
bind -f common right win-next
bind -f common mouse_scroll_down win-scroll-down
bind -f common mouse_scroll_up win-scroll-up

